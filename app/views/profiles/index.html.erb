<h4><%= I18n.t('profiles') %></h4>

<% if @profiles.any? %>
    <% @profiles.each do |profile| %>
      <p>
        <%= link_to profile do %>
          <%= profile.id %>
          <%= profile.social_name.blank? ? profile.name : profile.social_name %>  
        <% end %>
      </p>
    <% end %>
<% else %>
    <p><%= I18n.t('no_profiles') %></p>
<% end %>

<%= paginate @profiles %>
