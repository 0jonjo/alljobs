<% if @profile.social_name.blank? %>
  <h3><%= @profile.name %></h3>  
<% else %>
  <h3><%= @profile.social_name %></h3>
<% end %>

<dt><%= Profile.human_attribute_name(:birthdate) %></dt> 
<dd><%= I18n.l(@profile.birthdate, format: :default) %></dd>
<dt><%= Profile.human_attribute_name(:description) %></dt> 
<dd><%= @profile.description %></dd>
<dt><%= Profile.human_attribute_name(:educacional_background) %></dt>
<dd><%= @profile.educacional_background %></dd>
<dt><%= Profile.human_attribute_name(:experience) %></dt> 
<dd><%= @profile.experience %></dd>

<% if user_signed_in? %>
  <ul>
    <li><%= link_to I18n.t('edit'), edit_profile_path(@profile) %></li>
  </ul>
<% end %>

<% if headhunter_signed_in? %>
  <br>
  <div>  
    <%= render partial: 'comments/comment', locals: { comment: @comment } %>
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
<% end %>
