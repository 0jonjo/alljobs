<% if @profile.social_name.blank? %>
  <h3><%= @profile.name %></h3>  
<% else %>
  <h3><%= @profile.social_name %></h3>
<% end %>

<p>
  Birthday: <%= @profile.birthdate %><br>
  Description: <%= @profile.description %><br>
  Educational Background: <%= @profile.educacional_background %><br>
  Experience: <%= @profile.experience %>
</p>

<% if user_signed_in? %>
  <ul>
    <li><%= link_to "Edit", edit_profile_path(@profile) %></li>
  </ul>
<% end %>

<div>
  <br>
  <% @comments.each do |comment| %>
    <% if comment.headhunter_id == current_headhunter.id %>    
      <div>
        <p><%= comment.datetime %></p>
        <p><%= comment.body %></p>
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
  <% end %>
  <%= render partial: 'comments/form', locals: { comment: @comment } %>
</div>

<%= link_to "Return to Home", root_path %>
