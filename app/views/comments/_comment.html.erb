  <% if headhunter_signed_in? %>
    <b><%= I18n.t('your_comments') %></b>
    <% @comments.each do |comment| %>
      <% if comment.headhunter_id == current_headhunter.id %>    
        <div>
          <dt><%= I18n.localize(comment.datetime, format: :short) %></dt> 
          <dd><%= comment.body %></dd>
          <p>
            <%= link_to I18n.t('edit'), edit_comment_path(comment) %>
            <%= button_to I18n.t('delete'), comment_path(comment), 
                                  method: :delete, 
                                  data: { confirm: I18n.t('sure') } %>
          </p>
        </div>
      <% end %>
    <% end %>
  <% end %>  