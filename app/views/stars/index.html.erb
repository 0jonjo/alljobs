<h3>Stars</h3>

<% if headhunter_signed_in? %>
    <% if @stars.any? %>
      <% @stars.each do |star| %>
        <% if star.headhunter_id == current_headhunter.id %>
          <dt>Name</dt>
          <dd>
            <% if star.profile.social_name.blank? %>
              <%= link_to star.profile.name, profile_path(star.profile.user_id) %><br>
            <% else %>
              <%= link_to star.profile.social_name, profile_path(star.profile.user_id) %><br>
            <% end %>
          </dd>
          <dt>ID</dt> 
          <dd><%= star.profile.user_id %></dd>
          <p>
            <%= link_to "Remove Star", star_path(star), 
                                      method: :delete,
                                      data: { confirm: "Are you sure?" } %><br>  
          </p>
        <% else %>
          <p>There is no profile selected as a star.</p>      
        <% end %>
      <% end %>  
    <% else %>
      <p>There is no profile selected as a star.</p>  
    <% end %>  
<% end %>

<%= paginate @stars %>

<%= link_to "Return to Home", root_path %>