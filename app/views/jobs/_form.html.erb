<% if @job.errors.any? %>
  <% @job.errors.full_messages.each do |message|%>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_with model: job do |form| %>
   <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :skills %>
    <%= form.text_area :skills %>
  </div>

  <div>
    <%= form.label :salary %>
    <%= form.number_field :salary %>
  </div>

  <div>
    <%= form.label :company_id %>
    <%= form.select :company_id, companies %>
  </div>

  <div>
    <%= form.label :level %>
    <%= form.select :level, levels %>
  </div>

  <div>
    <%= form.label :date %>
    <%= form.date_field :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
  </div>

   <div>
    <%= form.label :country_id %>
    <%= form.select :country_id, countries %>
  </div>

  <div>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :job_status %>
    <%= form.select :job_status, statuses %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
