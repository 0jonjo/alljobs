<% if @job.errors.any? %>
  <% @job.errors.full_messages.each do |message|%>
    <p><%= message %></p>
  <% end %>  
<% end %>

<%= form_with model: job do |form| %>
   <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  
  <div>
    <%= form.label :skills %>
    <%= form.text_area :skills %>
  </div>
  
  <div>
    <%= form.label :salary %>
    <%= form.number_field :salary %>
  </div>
  
  <div>
    <%= form.label :company %>
    <%= form.text_field :company  %>
  </div>
  
  <div>
    <%= form.label :level %>
    <%= form.text_field :level  %>
  </div>
  
  <div>
    <%= form.label :place %>
    <%= form.text_field :place %>
  </div>

  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :job_status %>
    <%= form.select :job_status, Job.job_statuses.map { |j| [I18n.t(j[0]), j[0]] }  %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
