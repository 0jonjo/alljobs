<b><%= I18n.t('change_status') %></b>

<% if @job.published? %>
  <%= button_to I18n.t('draft'), drafted_job_path(@job.id) %>
  <%= button_to I18n.t('archived'), archived_job_path(@job.id) %>
<% elsif @job.draft? %>
  <%= button_to I18n.t('published'), published_job_path(@job.id) %>
  <%= button_to I18n.t('archived'), archived_job_path(@job.id) %>   
<% else %>
  <%= button_to I18n.t('draft'), drafted_job_path(@job.id) %>
  <%= button_to I18n.t('published'), published_job_path(@job.id) %>
<% end %>


