<h3>Openings Draft</h3>

<% if headhunter_signed_in? %>
  <%= link_to 'Published', jobs_path %> -
  <%= link_to 'Archived', index_archived_jobs_path %>
<% end %>

<% if headhunter_signed_in? || user_signed_in? %>
  <% if @jobs.any? %>  
    <% @jobs.each do |job| %>
      <%= render job %>       
    <% end %>
  <% else %>
    <p>There are not any job opening drafted.</p>
  <% end %>  
<% end %>
<%= paginate @jobs %>
