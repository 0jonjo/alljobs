<h4><%= @job.title %></h4>

<dt><%= Job.human_attribute_name(:code) %></dt> 
<dd><%= @job.code %></dd>
<dt><%= Job.human_attribute_name(:job_status) %></dt>
<dd><%= I18n.t(@job.job_status) %></dd>
<dt><%= Job.human_attribute_name(:date) %></dt> 
<dd><%= I18n.localize(@job.date) %></dd>
<dt><%= Job.human_attribute_name(:description) %></dt>
<dd><%= @job.description %></dd>
<dt><%= Job.human_attribute_name(:skills) %></dt>
<dd><%= @job.skills %></dd>
<dt><%= Job.human_attribute_name(:salary) %></dt>
<dd><%= @job.salary %></dd>
<dt><%= Job.human_attribute_name(:company) %></dt>
<dd><%= @job.company %></dd>
<dt><%= Job.human_attribute_name(:level) %></dt>
<dd><%= @job.level %></dd>
<dt><%= Job.human_attribute_name(:place) %></dt>
<dd><%= @job.place %></dd>

<%= link_to I18n.t('apply'), applies_path(job_id: @job.id, user_id: current_user.id), method: :post if user_signed_in? %>

<% if headhunter_signed_in? %>
  <div>
    <%= link_to I18n.t('edit'), edit_job_path(@job) %>
    <%= button_to I18n.t('delete'), job_path(@job),
                              method: :delete,
                              data: { confirm: I18n.t('sure') } %>
  </div>
  <div>
    <%= render 'jobs/select_status' %>
  </div>
  <div>
    <%= render 'jobs/applies' %>
  </div>   
<% end %>


