<% if user_signed_in? || headhunter_signed_in? %>
    <h3>Apply to: <%= link_to @apply.job.title, @apply.job %></h3>
    <dt>Apply ID</dt>
    <dd><%= @apply.id %></dd>
    <dt>User ID</dt> 
    <dd><%= @apply.user_id %></dd>
    <dt>User Email</dt> 
    <dd><%= @apply.user.email %></dd>
    <br>
    <%= link_to "View Profile ", profile_path(@apply.user_id) %>  
<% end %>

<% if @apply.accepted_headhunter == false %>
  <p>This application for a job offer was rejected.</p>
  <dt>Headhunter Feedback</dt> 
  <dd><%= @apply.feedback_headhunter %></dd>
<% end %>

<% if headhunter_signed_in? %>
    <div>
      <%= link_to "Star This Apply", stars_path(apply_id: @apply.id, profile_id: @apply.user_id, headhunter_id: current_headhunter.id), method: :post %>
    </div>
    <div>
      <%= link_to "Reject/Feedback This Apply", edit_apply_path %>
    </div>
    <div>
      <%= link_to "Make A Proposal", new_apply_proposal_path(apply_id = @apply.id) %>
    </div>
<% end %>

<% if user_signed_in? || headhunter_signed_in? %>
    <div>
      <%= button_to "Remove Apply", apply_path(@apply), 
                                  method: :delete,
                                  data: { confirm: "Are you sure?" } %>
    </div>
    <div>
        <% if @apply.proposal %> 
          <strong>See Proposal <%= link_to @apply.proposal.id, apply_proposal_path(@apply, @apply.proposal.id) %></strong>  
        <% end %>  
    </div>                           
<% end %>

